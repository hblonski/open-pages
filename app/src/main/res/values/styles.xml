<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryDark">@color/primaryPurple</item>
        <item name="colorAccent">@color/primaryPink</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="PurpleEditText" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/primaryPurple</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:minWidth">@dimen/default_button_min_width</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="PurpleButton" parent="DefaultButton">
        <item name="android:background">@drawable/purple_button_background</item>
    </style>
</resources>